
.pg-store
    svg
        fill: currentColor

    &__header
        img
            width: 100%
            height: 120px
            object-fit: cover

    &__title
        margin: 20px 0
        color: primary
        text-align: center
        font-weight: semibold
        font-size: 24px
        line-height: 1

    &__contacts
        display: flex
        justify-content: center
        align-items: center

        a
            display: inline-block
            margin: 0 16px

    &__whatsapp
        color: whatsapp

    &__chat
        color: chat

    &__facebook-messenger
        color: messenger

    &__email
        color: email

    &__right
        color: primary

    &__button
        display: flex
        justify-content: center
        align-items: center
        margin: 0 auto
        max-width: calc(100% - 20px)
        width: 335px
        height: 50px
        border: 0
        border-radius: 3px
        border-radius: 4px
        background: primary
        color: primary-contrast
        font-weight: regular
        font-size: 18px
        line-height: 1
        cursor: pointer

        &:hover
            background: primary-hover
            color: primary-hover-contrast

    &__list
        display: grid
        justify-content: space-around
        margin: 30px 0
        width: 100%
        grid-template-columns: repeat(1, 220px)

        @media (min-width: 450px)
            grid-template-columns: repeat(2, 220px)

        @media (min-width: 670px)
            grid-template-columns: repeat(3, 220px)

        @media (min-width: 890px)
            grid-template-columns: repeat(4, 220px)

    &__item
        overflow: hidden
        margin-bottom: 35px
        border-radius: 4px
        box-shadow: inset 0 0 0 1px #bcc5d3
        text-align: center
        font-size: 12px
        line-height: 1
        transition: all 0.2s ease

        &:hover
            @media (min-width: 992px)
                box-shadow: inset 0 0 0 1px #bcc5d3, 0 0 10px rgba(0, 0, 0, 0.2)

    &__main
        padding: 20px 30px

    &__name
        margin: 0
        color: primary
        font-weight: semibold
        font-size: 17px

    &__phone
        display: block
        margin-top: 10px
        color: chat
        font-weight: regular
        font-size: 18px

    &__address
        display: block
        margin-top: 10px
        color: text

    &__mailto
        display: block
        margin-top: 10px
        color: primary
        text-decoration: underline
        font-size: 10px

    &__timer-title
        margin: 10px 0 0
        color: primary
        font-weight: semibold
        font-size: 10px

    &__timer
        color: text
        font-weight: regular
        font-size: 10px

    &__social
        display: block
        margin-top: 5px

        svg
            fill: currentColor

        a
            display: inline-flex
            justify-content: center
            align-items: center
            width: 35px
            height: 35px
            text-decoration: none